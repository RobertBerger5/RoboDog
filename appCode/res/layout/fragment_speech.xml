<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                            xmlns:tools="http://schemas.android.com/tools"
                                            xmlns:app="http://schemas.android.com/apk/res-auto"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            tools:context=".SpeechFragment" android:id="@+id/frameLayout">
    <Button
            android:text="@string/speech_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/speechButton"
            android:layout_marginTop="300dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/speechText"
    />
    <TextView
            android:text="@string/speech_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/speechText"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/speechButton"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="0dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                            xmlns:tools="http://schemas.android.com/tools"
                                            xmlns:app="http://schemas.android.com/apk/res-auto"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            tools:context=".SocketFragment" android:id="@+id/frameLayout">
    <EditText
            android:id="@+id/IPText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="text"
            android:hint="@string/ipfield"
            android:autofillHints="@android:string/autofill"
            app:layout_constraintBottom_toTopOf="@+id/socketButton"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    <Button
            android:text="@string/socket_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/socketButton"
            android:layout_marginBottom="300dp"
            app:layout_constraintTop_toBottomOf="@+id/IPText"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
    />

</androidx.constraintlayout.widget.ConstraintLayout>